@using Microsoft.AspNetCore.Identity
@inject SignInManager<AccountUser> _signInManager

@if (_signInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Hello, @(User.FindFirst("UserFirstName").Value + " " +User.FindFirst("UserLastName").Value)
            @*FindFirst Retrieves the first Claims with specified claim type*@
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" asp-controller="Account" asp-action="SignOut">Logout</a>
            <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">Change Password</a>

        </div>
    </li>
}
else
{
    <li class="nav-item">
        @*Context.Request.Path will view the Current URL of the View*@
        <a class="btn btn-outline-secondary" asp-area="" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path">Login</a>
        <a class="btn btn-outline-secondary" asp-area="" asp-controller="Account" asp-action="Signup">Register</a>
    </li>
}



